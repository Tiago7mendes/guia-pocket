<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Conteúdo rolável -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/miniPlayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Capa -->
            <ImageView
                android:id="@+id/imgCapa"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_card_image"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Nome -->
            <TextView
                android:id="@+id/tvNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/imgCapa"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Artista -->
            <TextView
                android:id="@+id/tvArtista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/textSecondary"
                app:layout_constraintTop_toBottomOf="@id/tvNome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Gênero -->
            <TextView
                android:id="@+id/tvGenero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/spotifyGreen"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@id/tvArtista"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Descrição -->
            <TextView
                android:id="@+id/tvDescricao"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/textSecondary"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvGenero"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Botões -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSpotify"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_spotify"
                android:backgroundTint="@color/spotifyGreen"
                android:textColor="@color/spotifyBlack"
                app:layout_constraintTop_toBottomOf="@id/tvDescricao"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShare"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_share"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/spotifyGreenDark"
                android:textColor="@color/spotifyBlack"
                app:layout_constraintTop_toBottomOf="@id/btnSpotify"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVoltar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_back"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/spotifyBlack"
                android:textColor="@android:color/white"
                app:layout_constraintTop_toBottomOf="@id/btnShare"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Mini Player -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/miniPlayer"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:padding="12dp"
        android:background="@color/surface"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/imgMiniCapa"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_card_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tvMiniNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/imgMiniCapa"
            app:layout_constraintTop_toTopOf="@id/imgMiniCapa"
            app:layout_constraintEnd_toStartOf="@id/btnMiniPlay" />

        <TextView
            android:id="@+id/tvMiniArtista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintStart_toStartOf="@id/tvMiniNome"
            app:layout_constraintTop_toBottomOf="@id/tvMiniNome"
            app:layout_constraintEnd_toEndOf="@id/tvMiniNome" />

        <ProgressBar
            android:id="@+id/progressoMusica"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:max="100"
            app:layout_constraintStart_toStartOf="@id/tvMiniNome"
            app:layout_constraintEnd_toEndOf="@id/tvMiniNome"
            app:layout_constraintTop_toBottomOf="@id/tvMiniArtista" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMiniPlay"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:text="@string/symbol_play"
            app:layout_constraintEnd_toStartOf="@id/btnMiniStop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMiniStop"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:text="@string/symbol_stop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
