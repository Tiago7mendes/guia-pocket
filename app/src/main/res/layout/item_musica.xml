<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_card"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Capa -->
        <ImageView
            android:id="@+id/imgCapa"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/bg_card_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Nome -->
        <TextView
            android:id="@+id/tvNome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nome da Música"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/imgCapa"
            app:layout_constraintTop_toTopOf="@id/imgCapa"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Artista -->
        <TextView
            android:id="@+id/tvArtista"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Artista"
            android:textSize="15sp"
            android:textColor="@color/textSecondary"
            app:layout_constraintStart_toStartOf="@id/tvNome"
            app:layout_constraintTop_toBottomOf="@id/tvNome"
            app:layout_constraintEnd_toEndOf="@id/tvNome" />

        <!-- Gênero -->
        <TextView
            android:id="@+id/tvGenero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gênero"
            android:textSize="14sp"
            android:textColor="@color/spotifyGreen"
            app:layout_constraintStart_toStartOf="@id/tvNome"
            app:layout_constraintTop_toBottomOf="@id/tvArtista" />

        <!-- Descrição -->
        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Descrição da música ou álbum"
            android:textSize="13sp"
            android:textColor="@color/textSecondary"
            app:layout_constraintStart_toStartOf="@id/tvNome"
            app:layout_constraintTop_toBottomOf="@id/tvGenero"
            app:layout_constraintEnd_toEndOf="@id/tvNome"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
