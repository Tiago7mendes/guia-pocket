<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SpotifyList" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Cores principais -->
        <item name="colorPrimary">@color/spotifyGreen</item>
        <item name="colorPrimaryContainer">@color/spotifyGreenDark</item>
        <item name="colorSecondary">@color/accent</item>

        <!-- Fundo e superfícies -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>

        <!-- Texto -->
        <item name="android:textColor">@color/textPrimary</item>

        <!-- Sombra -->
        <item name="elevationOverlayEnabled">true</item>
        <item name="elevationOverlayColor">@color/sombraImagem</item>

        <!-- Barra de status e navegação -->
        <item name="android:statusBarColor">@color/spotifyBlack</item>
        <item name="android:navigationBarColor">@color/spotifyBlack</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
</resources>
